{
  "name": "real-system",
  "private": true,
  "version": "0.0.0",
  "description": "A real react component system that is easily themeable and extendable.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigwoof91/real-system.git"
  },
  "keywords": [
    "real system",
    "design system",
    "component library",
    "react",
    "styled-system",
    "emotion",
    "theme"
  ],
  "author": "Michael Wolf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bigwoof91/real-system/issues"
  },
  "homepage": "https://github.com/bigwoof91/real-system#readme",
  "workspaces": [
    "packages/*",
    "packages/components/*",
    "packages/libraries/*",
    "packages/primitives/*"
  ],
  "scripts": {
    "___________QUALITY___________": "code quality and maintenance",
    "lint": "eslint \"packages/**/*.{ts,tsx,mdx}\"",
    "lint:fix": "yarn lint --fix",
    "precise-commits": "precise-commits",
    "pkgs:check": "manypkg check",
    "pkgs:fix": "manypkg fix",
    "commit": "git-cz",
    "update-dependabot-config": "node ./tools/update-dependabot-config.js",
    "___________TESTING___________": "test scripts",
    "pretest": "yarn workspace @real-system/core clean && node ./.jest/preTest.js",
    "test": "yarn pretest && jest ./packages/",
    "test:coverage": "jest ./packages/ --runInBand --coverage",
    "___________RELEASE___________": "",
    "changeset": "changeset",
    "version:stable": "yarn changeset version && yarn install --mode=update-lockfile",
    "prerelease": "yarn lint && yarn test --runInBand",
    "release:stable": "yarn build && yarn changeset publish",
    "version:snapshot": "yarn changeset version --snapshot",
    "release:snapshot": "yarn changeset publish --no-git-tag --tag snapshot",
    "___________BUILD___________": "build scripts",
    "productionize": "node tools/productionize-package.js",
    "build": "yarn workspaces foreach --topological-dev run build",
    "build:js": "yarn workspaces foreach --topological-dev run build:js",
    "build:core": "yarn workspace @real-system/core run build",
    "build:pkg": "node tools/build-package.js",
    "build:playroom": "playroom build",
    "build:storybook": "yarn build && build-storybook -o ./storybook -c .storybook && yarn build:playroom",
    "___________DEVELOPMENT___________": "dev scripts",
    "bootstrap": "yarn && husky install",
    "dev": "node ./tools/run-workspace-dev --select=true --with=yarn:storybook,yarn:playroom",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "playroom": "playroom start",
    "generate:pkg": "node ./tools/generate-package"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.16.9",
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.20.0",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/cz-commitlint": "^16.1.0",
    "@commitlint/prompt-cli": "^16.1.0",
    "@emotion/jest": "^11.7.1",
    "@manypkg/cli": "^0.19.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@storybook/addon-a11y": "^6.4.15",
    "@storybook/addon-actions": "^6.4.15",
    "@storybook/addon-essentials": "^6.4.15",
    "@storybook/addon-links": "^6.4.15",
    "@storybook/addon-viewport": "^6.4.15",
    "@storybook/react": "^6.4.17",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "addon-screen-reader": "^1.8.6",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "csstype": "^3.0.10",
    "directory-named-webpack-plugin": "^4.0.1",
    "esbuild": "^0.14.14",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^5.0.4",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "generate-template-files": "^3.2.0",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "jest": "^27.4.7",
    "js-yaml": "^4.1.0",
    "lodash.debounce": "^4.0.8",
    "playroom": "^0.27.9",
    "precise-commits": "^1.0.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semver": "^7.3.5",
    "storybook-addon-performance": "^0.16.1",
    "storybook-addon-playroom": "^2.1.4",
    "terser": "^5.10.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "packageManager": "yarn@3.1.0"
}
