{
  "name": "real-system",
  "packageManager": "yarn@3.1.0",
  "private": true,
  "version": "0.0.0",
  "description": "An easily themeable, extendable 'Real' component 'System' for responsive web applications.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigwoof91/real-system.git"
  },
  "keywords": [
    "real system",
    "design system",
    "component library",
    "react",
    "styled-system",
    "styled-components",
    "theme"
  ],
  "author": "Michael Wolf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bigwoof91/real-system/issues"
  },
  "homepage": "https://github.com/bigwoof91/real-system#readme",
  "workspaces": [
    "packages/*",
    "packages/components/*",
    "packages/libraries/*",
    "packages/primitives/*"
  ],
  "main": "index.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "scripts": {
    "___________QUALITY___________": "code quality and maintenance",
    "lint": "eslint packages/**/*.{ts,tsx,mdx}",
    "lint:fix": "yarn lint -- --fix",
    "precise-commits": "precise-commits",
    "pkgs:check": "manypkg check",
    "pkgs:fix": "manypkg fix",
    "commit": "git-cz",
    "update-dependabot-config": "node ./tools/update-dependabot-config.js",
    "___________TESTING___________": "test scripts",
    "pretest": "yarn workspace @real-system/core clean && node ./.jest/preTest.js",
    "test": "yarn pretest && jest ./packages/",
    "test:coverage": "jest ./packages/ --runInBand --coverage",
    "___________RELEASE___________": "",
    "changeset": "changeset",
    "version:stable": "yarn changeset version",
    "version:next": "yarn changeset pre enter rc && yarn version:stable",
    "release": "yarn build && yarn lint && yarn test --runInBand && yarn changeset publish",
    "release:next": "yarn build && yarn lint && yarn test --runInBand && yarn changeset publish",
    "___________BUILD___________": "build scripts",
    "build": "yarn workspaces foreach --topological-dev run build",
    "build:storybook": "yarn build:packages && build-storybook -o ./storybook -c .storybook",
    "build:playroom": "playroom build",
    "build:storybook-site": "run-s build:storybook build:playroom",
    "___________DEVELOPMENT___________": "dev scripts",
    "bootstrap": "yarn && husky install",
    "dev": "node ./tools/run-workspace-dev",
    "___________SANDBOX___________": "local sandbox & website scripts",
    "website": "cd website && yarn start",
    "storybook": "start-storybook -p 6006",
    "playroom": "playroom start"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.0",
    "@babel/plugin-proposal-private-methods": "^7.16.0",
    "@babel/plugin-proposal-private-property-in-object": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@changesets/changelog-github": "^0.4.1",
    "@changesets/cli": "^2.18.0",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@commitlint/cz-commitlint": "^14.1.0",
    "@commitlint/prompt-cli": "^14.1.0",
    "@manypkg/cli": "^0.19.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@storybook/addon-a11y": "^6.3.12",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-viewport": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@yarnpkg/core": "^3.2.0-rc.5",
    "addon-screen-reader": "^1.8.6",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.4",
    "concurrently": "^6.4.0",
    "csstype": "^3.0.9",
    "directory-named-webpack-plugin": "^4.0.1",
    "esbuild": "^0.12.25",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "global": "^4.4.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "npm-run-all": "^4.1.5",
    "playroom": "^0.27.7",
    "precise-commits": "^1.0.2",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-esbuild": "^4.6.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook-addon-performance": "^0.16.1",
    "storybook-addon-playroom": "^2.1.4",
    "styled-components": "^5.3.3",
    "terser": "^5.9.0",
    "ts-jest": "^27.0.7",
    "type-fest": "^2.5.3",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "installConfig": {
    "hoistingLimits": "none"
  }
}
