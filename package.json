{
  "name": "real-system",
  "private": true,
  "version": "0.0.0",
  "description": "A real react component system that is easily themeable and extendable.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigwoof91/real-system.git"
  },
  "keywords": [
    "real system",
    "design system",
    "component library",
    "react",
    "styled-system",
    "emotion",
    "theme"
  ],
  "author": "Michael Wolf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bigwoof91/real-system/issues"
  },
  "homepage": "https://github.com/bigwoof91/real-system#readme",
  "workspaces": [
    "packages/*",
    "packages/components/*",
    "packages/libraries/*",
    "packages/primitives/*"
  ],
  "scripts": {
    "___________QUALITY___________": "code quality and maintenance",
    "lint": "eslint \"packages/**/*.{ts,tsx,mdx}\"",
    "lint:fix": "yarn lint --fix",
    "precise-commits": "precise-commits",
    "pkgs:check": "manypkg check",
    "pkgs:fix": "manypkg fix",
    "commit": "git-cz",
    "update-dependabot-config": "node ./tools/update-dependabot-config.js",
    "___________TESTING___________": "test scripts",
    "pretest": "yarn workspace @real-system/core clean && node ./.jest/preTest.js",
    "test": "yarn pretest && jest ./packages/",
    "test:coverage": "jest ./packages/ --runInBand --coverage",
    "___________RELEASE___________": "",
    "changeset": "changeset",
    "version:stable": "yarn changeset version && yarn install --mode=update-lockfile",
    "prerelease": "yarn lint && yarn test --runInBand",
    "release:stable": "yarn build && yarn changeset publish",
    "version:snapshot": "yarn changeset version --snapshot",
    "release:snapshot": "yarn changeset publish --no-git-tag --tag snapshot",
    "___________BUILD___________": "build scripts",
    "productionize": "node tools/productionize-package.js",
    "build": "yarn workspaces foreach --topological-dev run build",
    "build:js": "yarn workspaces foreach --topological-dev run build:js",
    "build:core": "yarn workspace @real-system/core run build",
    "build:pkg": "node tools/build-package.js",
    "build:playroom": "playroom build",
    "build:storybook": "build-storybook -o ./storybook -c .storybook -s .storybook/static && yarn build:playroom",
    "___________DEVELOPMENT___________": "dev scripts",
    "bootstrap": "yarn && husky install",
    "dev": "node ./tools/run-workspace-dev --select=true --with=yarn:storybook,yarn:playroom",
    "storybook": "start-storybook -p 6006 -s .storybook/static --no-manager-cache",
    "playroom": "playroom start",
    "generate:pkg": "node ./tools/generate-package"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.5",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.0",
    "@babel/plugin-transform-runtime": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.17.7",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/cz-commitlint": "^17.0.0",
    "@commitlint/prompt-cli": "^17.0.0",
    "@emotion/jest": "^11.9.3",
    "@manypkg/cli": "^0.19.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@storybook/addon-a11y": "^6.5.9",
